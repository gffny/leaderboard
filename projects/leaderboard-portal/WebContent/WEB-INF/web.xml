<?xml version="1.0" encoding="UTF-8"?>
<web-app id="leaderboard-portal" version="2.5"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" >

	<display-name>leaderboard</display-name>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/spring/applicationContext-security.xml
			/WEB-INF/spring/applicationContext-filters.xml
		</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<filter>
		<filter-name>initializationFilter</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>

	<filter>
		<filter-name>authenticationFilter</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	
	<filter>
		<filter-name>unauthenticationFilter</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>

	<!-- secure servlet for leaderboard application -->
	<servlet>
		<servlet-name>leaderboard-secure</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>	

	<filter-mapping>
		<filter-name>initializationFilter</filter-name>
		<servlet-name>leaderboard-secure</servlet-name>
	</filter-mapping>

	<filter-mapping>
		<filter-name>authenticationFilter</filter-name>
		<servlet-name>leaderboard-secure</servlet-name>
	</filter-mapping>

	<servlet-mapping>
		<servlet-name>leaderboard-secure</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>

	<!-- end secure servlet -->

	<!-- unsecured servlet for leaderboard application -->
	<servlet>
		<servlet-name>leaderboard</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<filter-mapping>
		<filter-name>initializationFilter</filter-name>
		<servlet-name>leaderboard</servlet-name>
	</filter-mapping>

	<filter-mapping>
		<filter-name>unauthenticationFilter</filter-name>
		<servlet-name>leaderboard</servlet-name>
	</filter-mapping>

	<servlet-mapping>
		<servlet-name>leaderboard</servlet-name>
		<url-pattern>/authentication/*</url-pattern>
	</servlet-mapping>

	<!-- end unsecured servlet -->

	<mime-mapping>
		<extension>eot</extension>
		<mime-type>application/octet-stream</mime-type>
	</mime-mapping>

	<mime-mapping>
		<extension>ttf</extension>
		<mime-type>application/octet-stream</mime-type>
	</mime-mapping>

	<mime-mapping>
		<extension>woff</extension>
		<mime-type>application/octet-stream</mime-type>
	</mime-mapping>

	<mime-mapping>
		<extension>png</extension>
		<mime-type>image/png</mime-type>
	</mime-mapping>

	<mime-mapping>
		<extension>json</extension>
		<mime-type>application/json</mime-type>
	</mime-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/leaderboard</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

</web-app>