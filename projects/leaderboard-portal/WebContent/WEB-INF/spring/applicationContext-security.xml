<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/security 
		http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<http auto-config="true" use-expressions="true" access-denied-page="/auth/denied" >
		<!-- NO RESTRICITIONS -->
		<intercept-url pattern="/auth*" access="IS_AUTHENTICATED_ANONYMOUSLY" />
		<intercept-url pattern="/help" access="IS_AUTHENTICATED_ANONYMOUSLY" />
		<intercept-url pattern="/publish*" access="IS_AUTHENTICATED_ANONYMOUSLY" />
		<intercept-url pattern="/js/*.js" access="IS_AUTHENTICATED_ANONYMOUSLY" />
		<intercept-url pattern="css/*.css" access="IS_AUTHENTICATED_ANONYMOUSLY" />
		
		<!-- RESTRICTIONS! -->
		<intercept-url pattern="/dashboard/*" access="ROLE_USER" />

		<!-- login -->
		<form-login
		    login-page="/authentication/login"
			login-processing-url="/authentication/process"
			authentication-failure-url="/authentication/login?login_error=1"
			default-target-url="/dashboard/profile" />

		<!-- logout -->
		<logout
		    invalidate-session="true"
		    logout-success-url="/authentication/logout"
		    delete-cookies="JSESSIONID" />
		
		<session-management
		    invalid-session-url="/authentication/logout?session=invalid" />
	</http>

	<authentication-manager>
		<authentication-provider user-service-ref="customAuthenticationProvider">
			<password-encoder ref="passwordEncoder"/>
		</authentication-provider>
	</authentication-manager>

	<beans:bean id="customAuthenticationProvider" class="com.gffny.leaderboard.portal.authentication.LeaderboardUserDetailService" />
	<beans:bean id="passwordEncoder" class="org.springframework.security.authentication.encoding.Md5PasswordEncoder" />

</beans:beans>